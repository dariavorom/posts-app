{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "no-undef": "error",
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "tabWidth": 4,
                "printWidth": 100,
                "semi": true,
                "singleQuote": true,
                "bracketSpacing": true,
                "arrowParens": "always",
                "bracketSameLine": true
            }
        ]
    }
}
